{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A simple URL shortener built with Node.js and Express",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "setup": "./setup.sh",
    "dev": "NODE_ENV=development node app.js",
    "prod": "NODE_ENV=production node app.js",
    "build": "npm install --production",
    "test": "node test.js",
    "test:parallels": "node test-parallels-features.js",
    "test:performance": "node test-performance.js",
    "test:all": "npm test && npm run test:performance && npm run test:parallels",
    "lint": "node -c app.js && echo 'Syntax check passed'",
    "validate": "npm run lint && npm test",
    "deploy:local": "npm run build && npm run prod",
    "deploy:docker": "docker build -t url-shortener . && docker run -p 3000:3000 url-shortener",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "ci:build": "npm ci && npm run validate",
    "ci:test": "npm run validate && npm run health-check",
    "ci:security": "npm audit --audit-level moderate",
    "ci:docker": "docker build -t url-shortener:ci . && docker run --rm -p 3000:3000 -d url-shortener:ci",
    "ci:deploy": "npm run ci:build && npm run ci:docker",
    "release:prepare": "npm run ci:build && npm run ci:security",
    "release:docker": "docker build -t url-shortener:latest .",
    "release:tag": "git tag -a v$(node -p 'require(\"./package.json\").version') -m 'Release v$(node -p 'require(\"./package.json\").version')'",
    "release:publish": "npm run release:prepare && npm run release:docker && npm run release:tag",
    "ts:build": "tsc",
    "ts:dev": "tsc && NODE_ENV=development node dist/app.js",
    "ts:prod": "tsc && NODE_ENV=production node dist/app.js",
    "ts:watch": "tsc --watch",
    "ts:lint": "tsc --noEmit && echo 'TypeScript check passed'",
    "ts:test": "npm run ts:build && node dist/test.js",
    "ts:start": "npm run ts:build && node dist/app.js",
    "ts:validate": "npm run ts:lint && npm run ts:test",
    "ts:demo": "npm run ts:build && node -e 'console.log(\"ðŸš€ TypeScript demo - Check /ts endpoint after starting server\")'",
    "demo:typescript": "node demo-typescript-features.js"
  },
  "keywords": [
    "url-shortener",
    "express",
    "nodejs",
    "web-application",
    "deployment"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "escape-html": "^1.0.3",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XF2525/Url-shortener.git"
  },
  "bugs": {
    "url": "https://github.com/XF2525/Url-shortener/issues"
  },
  "homepage": "https://github.com/XF2525/Url-shortener#readme"
}
